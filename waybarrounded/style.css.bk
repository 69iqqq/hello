* {
  font-size: 13px;
  font-family: "BlexMono Nerd Font";
  color: #dadada;
}
#waybar {
  background: transparent;
  border-radius: 10px;
}
#workspaces {
  border-radius: 5px;
  box-shadow: 0px 0px black;
}
#custom-icon {
  font-size: 20px;
}
